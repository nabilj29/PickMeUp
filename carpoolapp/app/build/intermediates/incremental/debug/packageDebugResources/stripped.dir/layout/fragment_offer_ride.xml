<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferRideFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginBottom="560px"
        android:src="@drawable/request_ride_icon" />

    <TextView
        android:id="@+id/TaxiIDtext"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="230px"
        android:text="Enter the Taxi ID Displayed on the inside back door of the taxi." />

    <EditText
        android:id="@+id/enterTaxiID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:layout_gravity="center"
        android:layout_marginBottom="80px"
        android:inputType="textPersonName"
        android:hint="ex. 923852" />

    <Button
        android:id="@+id/submitIDbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:text="Create Offer for this taxi" />


