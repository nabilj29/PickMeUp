<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestDisplayingFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/RequestDisplayingTitle"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="850px"
        android:gravity="center"
        android:text="Requests To Join Your Ride"
        android:textColor="@color/purple_700"
        android:textSize="30dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250px"/>

    <Button
        android:id="@+id/confirmrideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm this TaxiPool Ride"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navbar" />

</FrameLayout>