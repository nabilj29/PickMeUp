<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/orange_tint"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:orientation = 'horizontal'>

        <ImageView
            android:id="@+id/offeringuserimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/offeringusernameheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Offering User: "
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/offeringusernamefield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offering User Name "
            android:textSize="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:layout_gravity="left"
        android:orientation = 'horizontal'>

        <TextView
            android:id="@+id/startinglocationheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting Location: "
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/offerstartinglocationfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Bora Bora Lane, Mississauga, ON "
            android:textSize="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp"
        android:layout_gravity="left"
        android:orientation = 'horizontal'>

        <TextView
            android:id="@+id/destlocationheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination: "
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/offerdestlocationfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="156 Anaconda Gate, Hamilton "
            android:textSize="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"
        android:layout_gravity="left"
        android:orientation = 'horizontal'>

        <TextView
            android:id="@+id/ratinguser_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: "
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/offererratingfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5/5 stars"
            android:textSize="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top">

        <Button
            android:id="@+id/requestridejoinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="650px"
            android:text="Request to Join Ride"
            android:background="@color/purple_700"
            android:layout_marginBottom="15dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>