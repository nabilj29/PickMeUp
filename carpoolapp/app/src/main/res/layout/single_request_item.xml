<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/orange_tint"
    app:contentPadding="12dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:orientation = 'horizontal'>


        <TextView
            android:id="@+id/requestingusernameheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Requesting User: "
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/requestingusernamefield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offering User Name "
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="left"
        android:orientation = 'horizontal'>

        <TextView
            android:id="@+id/startinglocationheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting Location: "
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/requeststartinglocationfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Bora Bora Lane, Mississauga, ON "
            android:textSize="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_gravity="left"
        android:orientation = 'horizontal'>

        <TextView
            android:id="@+id/estimatedpricechangeHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Est. Fare Change: "
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/estimatedpricechangeStatement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + $2.25 "
            android:textSize="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_gravity="left"
        android:orientation = 'horizontal'>

        <TextView
            android:id="@+id/estimatedtimechangeHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Est. Time Change: "
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/estimatedtimechangeStatement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + 2 min"
            android:textSize="18dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"

        android:layout_gravity="left"
        android:orientation = 'horizontal'>

        <TextView
            android:id="@+id/ratinguser_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: "
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/requesterratingfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5/5 stars"
            android:textSize="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add this User to Trip"
            android:layout_marginTop="550px"
            android:textSize="17dp"
            android:textColor="@color/purple_700"/>

    </LinearLayout>



</androidx.cardview.widget.CardView>